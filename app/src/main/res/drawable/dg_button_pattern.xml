<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" ><!--눌릴때-->
        <shape>
            <solid
                android:color="@color/google_blue"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- pressed -->


    <item android:state_focused="true"><!--focus 받을때-->
        <shape>
            <solid
                android:color="@color/google_blue"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <solid
                android:color="@color/google_blue"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>