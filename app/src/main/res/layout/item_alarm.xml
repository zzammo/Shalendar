<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="25sp"
    android:paddingVertical="15sp">

    <TextView
        android:id="@+id/tv_date_alarm"
        android:layout_width="80sp"
        android:layout_height="20sp"
        android:textSize="15sp"
        android:text="23.10.16"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_time_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_alarm_color"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_time_alarm"
        android:layout_width="80sp"
        android:layout_height="20sp"
        android:textSize="15sp"
        android:text="오후 12:30"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_date_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_alarm_color"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:id="@+id/ll_alarm_color"
        android:layout_width="7dp"
        android:layout_height="0dp"
        android:background="@drawable/round_boundry"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/tv_date_alarm"
        app:layout_constraintEnd_toStartOf="@id/tv_title_alarm_item"
        app:layout_constraintTop_toTopOf="@id/tv_date_alarm"
        app:layout_constraintBottom_toBottomOf="@id/tv_time_alarm" />

    <TextView
        android:id="@+id/tv_title_alarm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수업"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/tv_date_alarm"
        app:layout_constraintStart_toEndOf="@id/ll_alarm_color"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time_alarm"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>