<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_schedule"
    android:background="@color/bg_white"
    android:animateLayoutChanges="true">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:animateLayoutChanges="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp"
                    android:layout_marginVertical="5sp"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/text_white"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint=" 제목"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_color_circle_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15sp"
                    android:layout_marginEnd="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                        android:id="@+id/im_color_circle_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/baseline_circle_24"
                        android:backgroundTint="@color/cat_0" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_palette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_cat_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_0"
                    android:padding="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_cat_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/iv_cat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_1"
                    android:padding="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_cat_0"
                    app:layout_constraintEnd_toStartOf="@id/iv_cat_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/iv_cat_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_2"
                    android:padding="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_cat_1"
                    app:layout_constraintEnd_toStartOf="@id/iv_cat_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/iv_cat_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_3"
                    android:padding="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_cat_2"
                    app:layout_constraintEnd_toStartOf="@id/iv_cat_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/iv_cat_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_4"
                    android:padding="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_cat_3"
                    app:layout_constraintEnd_toStartOf="@+id/iv_cat_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_cat_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_circle_24"
                    android:backgroundTint="@color/cat_5"
                    android:padding="15sp"
                    app:layout_constraintStart_toEndOf="@id/iv_cat_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 시간"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Switch
                    android:id="@+id/allday_switch"
                    android:text="하루종일    "
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7sp"
                    android:padding="7sp"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@+id/allday_switch"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/start_date_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/start_time_textview"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text=""
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_right_alt_24" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/end_date_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text=""
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                        <TextView
                            android:id="@+id/end_time_textview"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text=""
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/date_start_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <DatePicker
                    android:id="@+id/date_start_datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_end_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <DatePicker
                    android:id="@+id/date_end_datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/time_start_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:id="@+id/time_start_timepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white"
                    android:timePickerMode="spinner"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_end_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:id="@+id/time_end_timepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white"
                    android:timePickerMode="spinner"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:orientation="vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출발 전 알람"
                        android:textColor="@color/text_white"
                        android:padding="7sp"/>
                    <Switch
                        android:id="@+id/departure_alarm_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7sp"
                        android:layout_marginHorizontal="10sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/path_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pre_src_time_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:padding="7sp"
                        android:textSize="20sp"
                        android:text="예상 출발 시각"/>
                    <TextView
                        android:id="@+id/time_requiered_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:padding="5sp"
                        android:textSize="17sp"
                        android:text="예상 소요 시간"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7sp"
                    android:padding="7sp">

                    <LinearLayout
                        android:id = "@+id/ll_src_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ll_arrow">
                        <TextView
                            android:id="@+id/tv_src_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_text"
                            android:textAlignment="center"
                            android:text="현재 위치"
                            android:textColor="@color/text_white"
                            android:textSize="15sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5sp"
                        app:layout_constraintStart_toEndOf="@+id/ll_src_address"
                        app:layout_constraintTop_toTopOf="@+id/ll_src_address"
                        app:layout_constraintBottom_toBottomOf="@+id/ll_src_address"
                        app:layout_constraintEnd_toStartOf="@+id/ll_dst_address">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_arrow_forward_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id = "@+id/ll_dst_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/ll_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/dst_address_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/ed_text"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="도착지 검색"
                            android:textColor="@color/text_white"
                            android:textSize="15sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/means_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radiobutton_walk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도보"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1" />
                        <RadioButton
                            android:id="@+id/radiobutton_public"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대중교통"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/radiobutton_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자가용"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1"/>
                    </RadioGroup>
                </LinearLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:context=".MapsActivity"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/alarm_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:animateLayoutChanges="true">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>
                <LinearLayout
                    android:id="@+id/alarm_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_access_alarms_24"/>
                    <TextView
                        android:id="@+id/alarm_time_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:text="알람 설정 없음"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alarm_radio_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/line_white"
                        android:layout_marginBottom="10sp"/>

                    <RadioGroup
                        android:id="@+id/alarm_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/alarm_radio_button_null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:text="알람 설정 안함"
                            android:textColor="@color/text_white"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/checkbox_ontime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:text="일정 시작 시간"
                            android:textColor="@color/text_white" />
                        <RadioButton
                            android:id="@+id/checkbox_10_min_ago"
                            android:text="10분 전"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:textColor="@color/text_white" />
                        <RadioButton
                            android:id="@+id/checkbox_hourago"
                            android:text="1시간 전"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:textColor="@color/text_white" />
                        <RadioButton
                            android:id="@+id/checkbox_dayago"
                            android:text="1일 전"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:textColor="@color/text_white" />
                        <RadioButton
                            android:id="@+id/checkbox_custom"
                            android:text="1일 전"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:textColor="@color/text_white"
                            android:visibility="gone"/>
                    </RadioGroup>


                    <LinearLayout
                        android:id="@+id/ll_custom_alarm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal">
                        <NumberPicker
                            android:id="@+id/numpicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:selectionDividerHeight="0dp" />

                        <NumberPicker
                            android:id="@+id/charpicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:selectionDividerHeight="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/custom_alarm_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5sp"
                        android:layout_marginVertical="5sp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_add_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20sp"
                            android:text="직접 설정" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:animateLayoutChanges="true">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>

                <LinearLayout
                    android:id="@+id/iterator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_repeat_24"/>
                    <TextView
                        android:id="@+id/iterator_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:text="반복 안 함"/>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/iterator_radio_group"
                    android:visibility="gone"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/radiobutton_norepeat"
                        android:checked="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:text="반복 안 함"
                        android:textColor="@color/text_white" />
                    <RadioButton
                        android:id="@+id/radiobutton_everyday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:text="매일"
                        android:textColor="@color/text_white" />
                    <RadioButton
                        android:id="@+id/radiobutton_everyweek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:text="매주"
                        android:textColor="@color/text_white" />
                    <RadioButton
                        android:id="@+id/radiobutton_everymonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:text="매월"
                        android:textColor="@color/text_white" />
                    <RadioButton
                        android:id="@+id/radiobutton_everyyear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:text="매년"
                        android:textColor="@color/text_white" />
                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_edit_note_24"/>
                    <EditText
                        android:id="@+id/memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="메모"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/cancel_btn"
            android:paddingVertical="10sp"
            android:textSize="15sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"
            android:layout_weight="1"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>
        <Button
            android:id="@+id/save_btn"
            android:paddingVertical="10sp"
            android:textSize="15sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="저장"
            android:layout_weight="1"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>
    </LinearLayout>

</RelativeLayout>